@model Interext.Models.EventViewModel

@{
    ViewBag.Title = "Details";
}

@section CssStyles{
    @Styles.Render("~/Content/eventPageCss")
}


@*<div id="single-page">*@
<div>
    <div id="content" class="right-sidebar">
        <div class="event-page-content">
            <article>
                <div class="event-intro-wrapper" style="background-image: url('/Content/images/example-images/event1.jpg');">
                    <div class="event-intro">
                        <h1 class="event-title">
                            @Model.Title
                        </h1>
                        <div class="event-date">@Model.DateTimeOfTheEvent.Date</div>
                        <div class="clear"></div>
                        <div class="event-details">
                            <span class="fa fa-map-marker"></span>@Model.Place<br />
                            <a href="~/Account/ShowProfile"><div class="createdby">Created by</div> <img src="/Content/images/example-images/profile-pic.jpg" /><div class="creator-name">Sash Pol</div></a>
                            <div class="clear"></div>
                        </div>
                        <table class="event-restrictions">
                            <tr><td colspan="2">Event for:</td></tr>
                            <tr><td>Ages</td><td>@Model.AgeOfParticipantsMin - @Model.AgeOfParticipantsMax</td></tr>
                            <tr><td>Gender</td><td>@Model.GenderParticipant</td></tr>
                            <tr><td>Interests</td><td>Dogs, Arts</td></tr>
                        </table>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="event-desc">
                    <p>@Model.Description</p>
                    <p><span id="more-372"></span></p>
                    <p>@Model.Description</p>
                </div>
            </article>
