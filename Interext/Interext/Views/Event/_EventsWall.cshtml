@model IEnumerable<Interext.Models.Event>

@if (Model.Count() == 0)
{
    <div class="no-events">
        Sorry there are no events found.<br />
        <a href="/">Go back to events wall</a>
    </div>
}

@foreach (var item in Model)
{
    <div class="event-box" data-src="@Html.DisplayFor(modelItem => item.ImageUrl)" data-width="1144" data-height="791">
        <a href="/Event/Details?Id=@Html.DisplayFor(modelItem => item.Id)" class="event-box-content @Html.DisplayFor(modelItem => item.SideOfText)" style="background-color: rgb(@Html.DisplayFor(modelItem => item.BackroundColor)); background-color: rgba(@Html.DisplayFor(modelItem => item.BackroundColor),@Html.DisplayFor(modelItem => item.BackroundColorOpacity));">
            <div class="event-date">@Html.DisplayFor(modelItem => item.DateTimeOfTheEvent.Date.Day).@Html.DisplayFor(modelItem => item.DateTimeOfTheEvent.Date.Month)</div>
            <div class="event-title">@Html.DisplayFor(modelItem => item.Title)</div>
            <div class="event-location"><span class="fa fa-map-marker"></span>@Html.DisplayFor(modelItem => item.Place)</div>
            <table>

                @if (item.AgeOfParticipantsSet)
                {
                    <tr class="event-age-of-participants-container">
                        <td>
                            Age
                        </td>
                        <td>
                            @if (item.AgeOfParticipantsMin != null && item.AgeOfParticipantsMax != null)
                            {
                                @item.AgeOfParticipantsMin<span>-</span>@item.AgeOfParticipantsMax
                            }
                            @if (item.AgeOfParticipantsMin != null && item.AgeOfParticipantsMax == null)
                            {
                                @item.AgeOfParticipantsMin<span>+</span>
                            }
                            @if (item.AgeOfParticipantsMin == null && item.AgeOfParticipantsMax != null)
                            {
                                <span>under</span>
                                @item.AgeOfParticipantsMax
                            }
                        </td>
                    </tr>
                }
                @if (item.GenderParticipant != "Both")
                {
                    <tr class="event-gender-container"><td>Gender</td><td>@Html.DisplayFor(modelItem => item.GenderParticipant)</td></tr>
                }
                @if (item.EventVsAttendingUsers.Count() > 0)
                {
                    <tr class="event-num-of-participants-container">
                        <td>Attenders</td>
                        <td>@item.EventVsAttendingUsers.Count()</td>
                    </tr>
                }

                <tr class="event-by-person"><td>Created by</td><td><img src="@Html.DisplayFor(modelItem => item.CreatorUser.ImageUrl)" /></td></tr>

            </table>
        </a>
    </div>
}


